<html>

<style>
    h2{color: #0e84b5;
    text-align:center;}
    table{margin:0 auto;
    background: #0e84b5;}
    </style>

</html>
<?php
$host = '127.0.0.1';
$username = 'root';
$password = 'root';
$database = 'vrs'; //

// 创建数据库连接
$conn = new mysqli($host, $username, $password, $database);

// 检查连接
if ($conn->connect_error) {
    die("连接失败: " . $conn->connect_error);
}
$sql = "SELECT * FROM vol_info";
$result = $conn->query($sql);
if ($result && $result->num_rows > 0) {
    echo "<table border='1'>
<h2>志愿者注册表</h2>
    <tr>
        <th>姓名</th>
        <th>出生年月</th>
        <th>所属组织</th>
        <th>注册时间</th>
    </tr>";
    while($row = $result->fetch_assoc()) {

        echo "<tr>
            
            <td>" . $row["name"] . "</td>
            <td>" . $row["birth"] . "</td>
            <td>" . $row["org"] . "</td>
            <td>" . $row["reg_time"] . "</td>
            <!-- 其他列 -->
        </tr>";
    }
    echo "</table>";
} else {
    echo "0 结果";
}
$conn->close();
?>
