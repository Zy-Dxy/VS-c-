/*
		//枚举常量：一一列举出的常量
		//性别：男，女，保密；		三原色：红，黄，蓝。等可以列举出来的量
		//枚举关键——enum
enum Sex 
{
	MALE,
	FEMALE,
	SECRET
};
//MALE;FEMALE;SECRET - 枚举常量

int main() {
	//enum Sex s = FEMALE;
	printf("%d\n", MALE);//0
	printf("%d\n", FEMALE);//1
	printf("%d\n", SECRET);//2

	return 0;
}
